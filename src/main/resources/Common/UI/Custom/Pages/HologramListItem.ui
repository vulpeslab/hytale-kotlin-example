$C = "../Common.ui";
$Sounds = "../Sounds.ui";

@CardStyle = ButtonStyle(
  Default: (
    Background: #1a2535(0.6)
  ),
  Hovered: (
    Background: #243040(0.8)
  ),
  Pressed: (
    Background: #2e3a4a(1.0)
  )
);

@TextLabelStyle = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 16,
  HorizontalAlignment: Start,
  RenderBold: true,
  TextColor: #d0e0f0
);

@PositionLabelStyle = LabelStyle(
  ...$C.@DefaultLabelStyle,
  FontSize: 12,
  HorizontalAlignment: Start,
  TextColor: #7090a0
);

@EditButtonStyle = ButtonStyle(
  Default: (
    Background: #3a5a4a(0.8)
  ),
  Hovered: (
    Background: #4a7a5a(0.9)
  ),
  Pressed: (
    Background: #5a8a6a(1.0)
  )
);

@TeleportButtonStyle = ButtonStyle(
  Default: (
    Background: #3a4a6a(0.8)
  ),
  Hovered: (
    Background: #4a5a8a(0.9)
  ),
  Pressed: (
    Background: #5a6a9a(1.0)
  )
);

@DeleteButtonStyle = ButtonStyle(
  Default: (
    Background: #5a3a3a(0.8)
  ),
  Hovered: (
    Background: #7a4a4a(0.9)
  ),
  Pressed: (
    Background: #8a5a5a(1.0)
  )
);

Group {
  Anchor: (Bottom: 10, Height: 80);
  Background: #1a2535(0.5);
  Padding: (Full: 16);

  Group {
    LayoutMode: Left;

    // Hologram info section
    Group {
      FlexWeight: 1;
      LayoutMode: Top;

      // Hologram text
      Group {
        LayoutMode: Left;
        Anchor: (Bottom: 6, Height: 24);

        Label #HologramText {
          Style: @TextLabelStyle;
        }
      }

      // Position info
      Group {
        LayoutMode: Left;
        Anchor: (Height: 20);

        Label #HologramPosition {
          Style: @PositionLabelStyle;
        }
      }
    }

    // Action buttons
    Group {
      LayoutMode: Middle;
      Padding: (Left: 16);

      Group {
        LayoutMode: Left;
        Anchor: (Height: 28);

        Button #EditButton {
          Style: @EditButtonStyle;
          Anchor: (Right: 6);
          Padding: (Horizontal: 14, Vertical: 6);
          LayoutMode: Middle;

          Label {
            Style: LabelStyle(...$C.@DefaultLabelStyle, FontSize: 12, HorizontalAlignment: Center);
            Text: %exampleplugin.ui.holograms.edit;
          }
        }

        Button #TeleportButton {
          Style: @TeleportButtonStyle;
          Anchor: (Right: 6);
          Padding: (Horizontal: 14, Vertical: 6);
          LayoutMode: Middle;

          Label {
            Style: LabelStyle(...$C.@DefaultLabelStyle, FontSize: 12, HorizontalAlignment: Center);
            Text: %exampleplugin.ui.holograms.teleport;
          }
        }

        Button #DeleteButton {
          Style: @DeleteButtonStyle;
          Padding: (Horizontal: 14, Vertical: 6);
          LayoutMode: Middle;

          Label {
            Style: LabelStyle(...$C.@DefaultLabelStyle, FontSize: 12, HorizontalAlignment: Center);
            Text: %exampleplugin.ui.holograms.delete;
          }
        }
      }
    }
  }
}
