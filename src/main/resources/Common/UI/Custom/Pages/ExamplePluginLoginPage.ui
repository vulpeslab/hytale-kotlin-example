$C = "../Common.ui";
$Sounds = "../Sounds.ui";

@InputLabel = Label {
  Anchor: (Bottom: 8);
  Style: $C.@DefaultLabelStyle;
};

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    Anchor: (Width: 420);

    #Title {
      Group {
        Label #TitleLabel {
          Style: $C.@TitleStyle;
          Padding: (Horizontal: 19);
          Text: %exampleplugin.ui.login.title;
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 16);

      // Username field
      Group {
        LayoutMode: Top;
        Anchor: (Bottom: 16);

        @InputLabel #UsernameLabel {
          Text: %exampleplugin.ui.login.username;
        }

        $C.@TextField #UsernameInput {
          PlaceholderText: %exampleplugin.ui.login.username.placeholder;
        }
      }

      // Password field
      Group {
        LayoutMode: Top;
        Anchor: (Bottom: 16);

        @InputLabel #PasswordLabel {
          Text: %exampleplugin.ui.login.password;
        }

        $C.@TextField #PasswordInput {
          PlaceholderText: %exampleplugin.ui.login.password.placeholder;
          PasswordChar: "*";
        }
      }

      // Error message (hidden by default)
      Label #ErrorLabel {
        Style: LabelStyle(...$C.@DefaultLabelStyle, TextColor: #ff6b6b);
        Anchor: (Bottom: 8);
        Visible: false;
      }

      // Separator
      Group {
        Anchor: (Vertical: 8, Height: 1);
        Background: #5e512c(0.4);
      }

      // Login button
      Group {
        LayoutMode: Center;
        Anchor: (Top: 8);

        $C.@TextButton #LoginButton {
          @Text = %exampleplugin.ui.login.submit;
          @Sounds = $Sounds.@SaveSettings;
          FlexWeight: 1;
        }
      }
    }
  }
}

$C.@BackButton {}
