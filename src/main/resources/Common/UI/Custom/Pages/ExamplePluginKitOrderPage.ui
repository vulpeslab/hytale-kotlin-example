$C = "../Common.ui";
$Sounds = "../Sounds.ui";

@BackButtonStyle = ButtonStyle(
  Default: (
    Background: #2a3545(0.8)
  ),
  Hovered: (
    Background: #3a4860(0.9)
  ),
  Pressed: (
    Background: #4a5870(1.0)
  )
);

@ArrowButtonStyle = ButtonStyle(
  Default: (
    Background: #2a3a4a(0.7)
  ),
  Hovered: (
    Background: #3a4a5a(0.85)
  ),
  Pressed: (
    Background: #4a5a6a(0.95)
  )
);

@ArrowDisabledStyle = ButtonStyle(
  Default: (
    Background: #1a2535(0.4)
  ),
  Hovered: (
    Background: #1a2535(0.4)
  ),
  Pressed: (
    Background: #1a2535(0.4)
  )
);

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    Anchor: (Width: 600, Height: 600);

    #Title {
      Group {
        LayoutMode: Left;
        Padding: (Horizontal: 19);

        Label {
          Style: $C.@TitleStyle;
          Text: %exampleplugin.ui.kits.order.title;
        }

        Label #KitNameLabel {
          Style: LabelStyle(...$C.@TitleStyle, RenderBold: true);
          Padding: (Left: 8);
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 24);

      // Top bar with back button
      Group {
        LayoutMode: Left;
        Anchor: (Bottom: 16, Height: 48);

        Button #BackButton {
          Style: @BackButtonStyle;
          Padding: (Horizontal: 20, Vertical: 12);
          LayoutMode: Middle;

          Label {
            Style: LabelStyle(...$C.@DefaultLabelStyle, FontSize: 14, HorizontalAlignment: Center);
            Text: %exampleplugin.ui.kits.back;
          }
        }

        // Spacer
        Group { FlexWeight: 1; }

        Label {
          Style: LabelStyle(...$C.@DefaultLabelStyle, FontSize: 12, TextColor: #8090a0);
          Text: %exampleplugin.ui.kits.order.hint;
        }
      }

      // Item list
      Group #ItemList {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        Background: #0a1018(0.4);
        Padding: (Full: 10);
      }
    }
  }
}
